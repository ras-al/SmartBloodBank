<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" spacing="25.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.smartbloodbank.controller.PostRequestController">
    <padding>
        <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
    </padding>
    <children>
        <Text styleClass="dashboard-header" text="Post an Urgent Blood Request" />
        <VBox maxWidth="450.0" spacing="20.0" styleClass="form-container">
            <children>
                <VBox spacing="8.0">
                    <Label styleClass="form-label" text="Blood Type Required" />
                    <ComboBox fx:id="bloodTypeComboBox" prefWidth="400.0" promptText="Select Blood Type" />
                </VBox>
                <VBox spacing="8.0">
                    <Label styleClass="form-label" text="Units Required" />
                    <Spinner fx:id="unitsSpinner" initialValue="1" max="10" min="1" prefWidth="400.0" />
                </VBox>
                <Button onAction="#handleSubmitRequest" prefWidth="400.0" styleClass="primary-button" text="Submit Request" />
            </children>
        </VBox>
    </children>
</VBox>