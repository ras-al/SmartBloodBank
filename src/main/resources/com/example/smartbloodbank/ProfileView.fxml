<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" spacing="25.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.smartbloodbank.controller.ProfileController">
    <padding>
        <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
    </padding>
    <children>
        <Text styleClass="dashboard-header" text="My Profile" />
        <GridPane hgap="30.0" maxWidth="1000.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <VBox spacing="20.0" styleClass="profile-card" GridPane.columnIndex="0">
                    <children>
                        <Text styleClass="profile-section-header" text="Account Information" />
                        <VBox spacing="8.0">
                            <children>
                                <Label styleClass="form-label" text="Username" />
                                <TextField fx:id="usernameField" promptText="Your username" />
                            </children>
                        </VBox>
                        <VBox spacing="8.0">
                            <children>
                                <Label styleClass="form-label" text="Email Address" />
                                <TextField fx:id="emailField" editable="false" promptText="Your email address" styleClass="text-field, read-only-field" />
                            </children>
                        </VBox>
                        <VBox spacing="8.0">
                            <children>
                                <Label styleClass="form-label" text="Password" />
                                <PasswordField fx:id="passwordField" promptText="Enter new password to update" />
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <VBox fx:id="roleSpecificFields" managed="false" spacing="20.0" styleClass="profile-card" visible="false" GridPane.columnIndex="1">
                    <children>
                        <Text styleClass="profile-section-header" text="Role Details" />
                        <VBox fx:id="donorFields" managed="false" spacing="8.0" visible="false">
                            <children>
                                <Label styleClass="form-label" text="Blood Type" />
                                <TextField fx:id="bloodTypeField" editable="false" focusTraversable="false" styleClass="text-field, read-only-field" />
                            </children>
                        </VBox>
                        <VBox fx:id="hospitalFields" managed="false" spacing="8.0" visible="false">
                            <children>
                                <Label styleClass="form-label" text="Hospital Name" />
                                <TextField fx:id="hospitalNameField" />
                            </children>
                        </VBox>
                        <VBox fx:id="organizerFields" managed="false" spacing="8.0" visible="false">
                            <children>
                                <Label styleClass="form-label" text="Organization Name" />
                                <TextField fx:id="organizationNameField" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </GridPane>
        <Button onAction="#handleSaveChanges" styleClass="primary-button" text="Save Changes" />
    </children>
</VBox>