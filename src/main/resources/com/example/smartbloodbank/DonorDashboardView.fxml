<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<GridPane hgap="30.0" stylesheets="@styles.css" vgap="30.0"
          xmlns="http://javafx.com/javafx/21"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.smartbloodbank.controller.DonorDashboardController">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
    </rowConstraints>

    <children>
        <VBox spacing="15.0" styleClass="info-card" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Text styleClass="info-card-title" text="Lifetime Impact" />
            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <VBox>
                    <Text fx:id="donationsCountText" styleClass="info-card-value" text="0" />
                    <Text text="Donations" />
                </VBox>
                <VBox>
                    <Text fx:id="livesSavedText" styleClass="info-card-value" text="0" />
                    <Text text="Lives Saved" />
                </VBox>
            </HBox>
        </VBox>

        <VBox spacing="10.0" styleClass="info-card" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Text styleClass="info-card-title" text="Donation Eligibility" />
            <Text fx:id="eligibilityStatusText" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Calculating..." />
            <Text fx:id="nextEligibleDateText" text="" />
        </VBox>

        <VBox spacing="10.0" styleClass="info-card" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <Text styleClass="info-card-title" text="My Achievements" />
            <HBox alignment="CENTER" spacing="10.0">
                <Text fx:id="achievementText" styleClass="info-card-value" text="No badges yet." />
            </HBox>
            <Text fx:id="achievementDescription" text="Donate to earn badges!" />
        </VBox>

        <VBox styleClass="info-card" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <Text styleClass="info-card-title" text="Donation History" />
            <ListView fx:id="donationHistoryListView" styleClass="history-list-view" VBox.vgrow="ALWAYS" />
        </VBox>
    </children>
</GridPane>